{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Publish",
            "type": "shell",
            "command": "./scripts/publish.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "taskName": "Preview",
            "type": "shell",
            "command": "./scripts/preview.sh",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "taskName": "Create a new post",
            "type": "shell",
            "command": "./scripts/mkpost.sh",
            "isBackground": true,
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Create a new draft",
            "type": "shell",
            "command": "./scripts/mkdraft.sh",
            "isBackground": true,
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}